<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/bottom_my_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:background="@drawable/bottom_sheet_shape"
        app:layout_constraintBottom_toBottomOf="@+id/rv_combinations" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@+id/rv_combinations" app:layout_constraintVertical_bias="1.0"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <GridLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:orientation="horizontal"
            android:padding="4dp">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion1"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion2"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion3" />
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion4"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion5"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion6"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion7"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion8"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion9"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:src="@android:mipmap/sym_def_app_icon"
                android:id="@+id/iv_champion10"/>

    </GridLayout>
</LinearLayout>